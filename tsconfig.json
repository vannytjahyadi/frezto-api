{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@controller/*": ["controller/*"],
      "@entity/*": ["entity/*"],
      "@middleware/*": ["middleware/*"],
      "@request/*": ["request/*"],
      "@routes/*": ["routes/*"],
      "@service/*": ["service/*"],
      "@view/*": ["view/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts"
  ]
}